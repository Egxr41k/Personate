<UserControl x:Class="TBStyler.WPF.Views.ColorPickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBStyler.WPF.Views"
             mc:Ignorable="d" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle 
            x:Name="colorprev"
            Grid.Row="0"
            Grid.RowSpan="3"
            Height="150"  
            Width="150" 
            Fill="{Binding PreviewColor}" 
            />

        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            >
            <Button 
                ToolTip="Pick a color from the screen. 
                    (Left click to pick a color on the screen from your mouse cursor.)" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xEF3C;" 
                Width="33" 
                Margin="10"
                Command="{Binding GetColorFromPixelCommand}"
                />
            <TextBox 
                x:Name="hexcolorbox" 
                Height="23" 
                TextWrapping="Wrap" 
                Text="{Binding HexValue, Mode=TwoWay}" 
                Width="76" 
                />
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Orientation="Horizontal"
            >
            <TextBlock 
                Height="19" 
                Width="60"
                TextAlignment="Center"                 
                TextWrapping="Wrap" 
                Text="Red" 
                />
            <TextBlock 
                x:Name="tRed" 
                TextWrapping="Wrap" 
                Text="{Binding RedValue}" 
                Height="19" 
                Width="20"                 
                />
            <Slider 
                x:Name="sRed" 
                Width="255" 
                Maximum="255" 
                Foreground="#FFD70000" 
                Height="32"
                Value="{Binding RedValue, Mode=TwoWay}"
                />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Horizontal"
            >

            <TextBlock 
                TextWrapping="Wrap" 
                TextAlignment="Center"
                Text="Green" 
                Height="19" 
                Width="60" 
                />
            <TextBlock 
                x:Name="tGreen" 
                Height="19" 
                Width="20" 
                TextWrapping="Wrap" 
                Text="{Binding GreenValue}" 
                />
            <Slider 
                x:Name="sGreen" 
                Width="255" 
                Height="32" 
                Maximum="255"
                Foreground="#FF29B01C" 
                Value="{Binding GreenValue, Mode=TwoWay}"
                />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal"
            >
            <TextBlock 
                TextWrapping="Wrap" 
                TextAlignment="Center"
                Text="Blue" 
                Height="19" 
                Width="60" 
                />
            <TextBlock 
                x:Name="tBlue" 
                TextWrapping="Wrap" 
                Text="{Binding BlueValue}" 
                Height="19" 
                Width="20" 
                />
            <Slider 
                x:Name="sBlue" 
                Width="255" 
                Height="32"                 
                Maximum="255" 
                Foreground="#FF0023FF"
                Value="{Binding BlueValue, Mode=TwoWay}"
                />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Orientation="Horizontal"
            >
            <TextBlock 
                TextWrapping="Wrap" 
                TextAlignment="Center"
                Text="Alpha" 
                Height="19" 
                Width="60" 
                />
            <TextBlock 
                x:Name="tAlpha" 
                TextWrapping="Wrap" 
                Text="{Binding AlphaValue}"
                Height="19" 
                Width="20" 
                />
            <Slider 
                x:Name="sAlpha" 
                Width="255" 
                Height="32" 
                Maximum="255" 
                Foreground="#FF898989"
                Value="{Binding AlphaValue, Mode=TwoWay}"
                />
        </StackPanel>
    </Grid>
</UserControl>
