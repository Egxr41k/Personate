<UserControl x:Class="Personate.Modules.CursorSwitcher.Views.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personate.Modules.CursorSwitcher.Views"
             mc:Ignorable="d" 
             Height="200" Width="180">
    <Border Style="{StaticResource DarkBg}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Source="\Resources\win10.jpg"
                Stretch="UniformToFill"/>

            <Image
                Grid.Row="0"
                Source="{Binding Image}"
                Stretch="None"/>

            <Image
                Grid.Row="1"
                Grid.Column="0"
                Source="\Resources\Icons\moreact.png">

                <Image.InputBindings>
                    <MouseBinding
                        Command="{Binding }"
                        Gesture="LeftClick"/>
                </Image.InputBindings>
            </Image>
        </Grid>
    </Border>
</UserControl>
